            >
              <span>{t.nav.contact}</span>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="container mx-auto border-t border-green-700/50 py-5">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="text-green-200 text-sm">
          <p>&copy; {COMPANY_INFO.year} {COMPANY_INFO.name}. {t.footer.rights}</p>
        </div>
        
        <div class="flex items-center space-x-6 text-green-200 text-sm">
          <div class="flex items-center space-x-2">
            <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
            <span>
              {lang === 'es' ? 'Calidad Mexicana' : lang === 'it' ? 'Qualit√† Messicana' : 'Mexican Quality'}
