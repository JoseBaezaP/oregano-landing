---
import { getTranslations } from '../../shared/utils/i18n';
import { COMPANY_INFO, WHATSAPP_LINK } from '../../shared/constants/config';
import WhatsAppIcon from './icons/WhatsAppIcon.astro';
import FacebookIcon from './icons/FacebookIcon.astro';

interface Props {
  lang?: string;
}

const { lang = 'es' } = Astro.props;
const t = getTranslations(lang);
---

<footer class="bg-gradient-to-br from-green-900 via-green-800 to-emerald-900 text-white">
  <!-- Main Footer Content -->
  <div class="container mx-auto px-4 py-16">
    <div class="grid md:grid-cols-4 gap-12 mb-12">
      <!-- Brand Section -->
      <div class="md:col-span-1">
        <div class="flex flex-col items-center md:items-start space-y-4">
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-3 border border-white/20">
            <img src="/RaizDelSol.png" alt="Or√©gano Premium" class="w-16 h-16 object-contain" />
          </div>
          <div class="text-center md:text-left">
            <h3 class="text-xl font-bold text-green-100 mb-2">Or√©gano Premium</h3>
            <p class="text-green-200 text-sm leading-relaxed">
              {lang === 'es' 
                ? 'El mejor or√©gano mexicano para el mercado internacional'
                : lang === 'it'
                ? 'Il miglior origano messicano per il mercato internazionale'
                : 'The best Mexican oregano for the international market'}
            </p>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-6 text-green-100">
          {lang === 'es' ? 'Enlaces R√°pidos' : lang === 'it' ? 'Link Rapidi' : 'Quick Links'}
        </h3>
        <ul class="space-y-3">
          <li><a href={`${lang === 'en' ? '/en' : lang === 'it' ? '/it' : ''}#home`} class="text-green-200 hover:text-white transition-colors duration-200 flex items-center group">
            <span class="w-1.5 h-1.5 bg-green-400 rounded-full mr-2 group-hover:bg-white transition-colors"></span>
            {t.nav.home}
          </a></li>
          <li><a href={`${lang === 'en' ? '/en' : lang === 'it' ? '/it' : ''}#about`} class="text-green-200 hover:text-white transition-colors duration-200 flex items-center group">
            <span class="w-1.5 h-1.5 bg-green-400 rounded-full mr-2 group-hover:bg-white transition-colors"></span>
            {t.nav.about}
          </a></li>
          <li><a href={`${lang === 'en' ? '/en' : lang === 'it' ? '/it' : ''}#products`} class="text-green-200 hover:text-white transition-colors duration-200 flex items-center group">
            <span class="w-1.5 h-1.5 bg-green-400 rounded-full mr-2 group-hover:bg-white transition-colors"></span>
            {t.nav.products}
          </a></li>
          <li><a href={`${lang === 'en' ? '/en' : lang === 'it' ? '/it' : ''}#export-info`} class="text-green-200 hover:text-white transition-colors duration-200 flex items-center group">
            <span class="w-1.5 h-1.5 bg-green-400 rounded-full mr-2 group-hover:bg-white transition-colors"></span>
            {t.export.title}
          </a></li>
          <li><a href={`${lang === 'en' ? '/en' : lang === 'it' ? '/it' : ''}#contact`} class="text-green-200 hover:text-white transition-colors duration-200 flex items-center group">
            <span class="w-1.5 h-1.5 bg-green-400 rounded-full mr-2 group-hover:bg-white transition-colors"></span>
            {t.nav.contact}
          </a></li>
        </ul>
      </div>

      <!-- Export Info -->
      <div>
        <h3 class="text-lg font-semibold mb-6 text-green-100">
          {lang === 'es' ? 'Exportaci√≥n' : lang === 'it' ? 'Esportazione' : 'Export'}
        </h3>
        <div class="space-y-3 text-green-200">
          <div class="flex items-start space-x-2">
            <span class="text-green-400 mt-1">üåç</span>
            <span class="text-sm">
              {lang === 'es' ? 'Mercado Italiano' : lang === 'it' ? 'Mercato Italiano' : 'Italian Market'}
            </span>
          </div>
          <div class="flex items-start space-x-2">
            <span class="text-green-400 mt-1">üìã</span>
            <span class="text-sm">
              {lang === 'es' ? 'Certificaci√≥n SENASICA' : lang === 'it' ? 'Certificazione SENASICA' : 'SENASICA Certification'}
            </span>
          </div>
          <div class="flex items-start space-x-2">
            <span class="text-green-400 mt-1">üèÜ</span>
            <span class="text-sm">
              {lang === 'es' ? 'Calidad Premium' : lang === 'it' ? 'Qualit√† Premium' : 'Premium Quality'}
            </span>
          </div>
          <div class="flex items-start space-x-2">
            <span class="text-green-400 mt-1">üå±</span>
            <span class="text-sm">
              {lang === 'es' ? 'Cultivo Sostenible' : lang === 'it' ? 'Coltivazione Sostenibile' : 'Sustainable Farming'}
            </span>
          </div>
        </div>
      </div>

      <!-- Contact & Social -->
      <div>
        <h3 class="text-lg font-semibold mb-6 text-green-100">
          {lang === 'es' ? 'Conecta con Nosotros' : lang === 'it' ? 'Connettiti con Noi' : 'Connect with Us'}
        </h3>
        <div class="space-y-4">
          <!-- WhatsApp -->
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-green-700 rounded-full flex items-center justify-center">
              <WhatsAppIcon width={20} height={20} class="text-green-200" />
            </div>
            <a href={WHATSAPP_LINK} target="_blank" rel="noopener noreferrer" class="text-green-200 hover:text-white transition-colors duration-200">
              {lang === 'es' ? 'WhatsApp' : lang === 'it' ? 'WhatsApp' : 'WhatsApp'}
            </a>
          </div>

          <!-- Facebook -->
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center">
              <FacebookIcon width={20} height={20} class="text-white" />
            </div>
            <a href="https://www.facebook.com/RaizdelSoleOficial" target="_blank" rel="noopener noreferrer" class="text-green-200 hover:text-white transition-colors duration-200">
              Facebook
            </a>
          </div>
        </div>
          
          <div class="bg-white/5 backdrop-blur-sm rounded-lg p-4 border border-white/10 mt-5">
            <p class="text-sm text-green-200 mb-2">
              {lang === 'es' 
                ? '¬øInteresado en exportar?' 
                : lang === 'it'
                ? 'Interessato all\'esportazione?'
