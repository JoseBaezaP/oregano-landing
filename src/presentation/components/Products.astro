---
import { getTranslations } from '../../shared/utils/i18n';

interface Props {
  lang?: string;
}

const { lang = 'es' } = Astro.props;
const t = getTranslations(lang);
---

<section id="products" class="py-20 bg-green-50">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-green-800 mb-12">{t.products.title}</h2>
    
    <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      <!-- Product 1 -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden transform hover:scale-105 transition duration-300">
        <img 
          src="/ProductoUno.jpeg" 
          alt={t.products.product1.name} 
          class="w-full h-80 object-cover"
        />
        <div class="p-8">
          <h3 class="text-2xl font-bold text-green-700 mb-4">{t.products.product1.name}</h3>
          <p class="text-gray-600 mb-6">{t.products.product1.description}</p>
          
          <div class="mb-6">
            <h4 class="font-semibold text-green-600 mb-3">{t.products.quality}:</h4>
            <ul class="space-y-2">
              {t.products.product1.features.map((feature) => (
                <li class="flex items-center text-gray-700">
                  <span class="text-green-500 mr-2">✓</span>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
          
          <a 
            href="#contact" 
            class="inline-block bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition w-full text-center"
          >
            {t.products.contact}
          </a>
        </div>
      </div>

      <!-- Product 2 -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden transform hover:scale-105 transition duration-300">
        <img 
          src="/ProductoDos.jpeg" 
          alt={t.products.product2.name} 
          class="w-full h-80 object-cover"
        />
        <div class="p-8">
          <h3 class="text-2xl font-bold text-green-700 mb-4">{t.products.product2.name}</h3>
          <p class="text-gray-600 mb-6">{t.products.product2.description}</p>
          
          <div class="mb-6">
            <h4 class="font-semibold text-green-600 mb-3">{t.products.quality}:</h4>
            <ul class="space-y-2">
              {t.products.product2.features.map((feature) => (
                <li class="flex items-center text-gray-700">
                  <span class="text-green-500 mr-2">✓</span>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
          
          <a 
            href="#contact" 
            class="inline-block bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition w-full text-center"
          >
            {t.products.contact}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
