---
import { getTranslations } from '../../shared/utils/i18n';

interface Props {
  lang?: string;
}

const { lang = 'es' } = Astro.props;
const t = getTranslations(lang);
---

<section id="products" class="py-20 bg-green-50">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-green-800 mb-12">{t.products.title}</h2>
    
    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden transform hover:scale-105 transition duration-300">
        <img 
          src="/WhatsApp Image 2025-11-30 at 15.11.13.jpeg" 
          alt="Orégano Premium" 
          class="w-full h-96 object-cover"
        />
        <div class="p-8 text-center">
          <h3 class="text-2xl font-bold text-green-700 mb-4">
            {lang === 'es' ? 'Orégano Premium' : lang === 'it' ? 'Origano Premium' : 'Premium Oregano'}
          </h3>
          <p class="text-gray-600 mb-6">
            {lang === 'es' 
              ? 'Orégano de la más alta calidad, perfecto para todo tipo de platillos.' 
              : lang === 'it'
              ? 'Origano di altissima qualità, perfetto per tutti i tipi di piatti.'
              : 'Highest quality oregano, perfect for all types of dishes.'}
          </p>
          <a 
            href="#contact" 
            class="inline-block bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition"
          >
            {t.hero.cta}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
